#!/bin/bash
# Anything-sync-daemon
# By graysky <graysky AT archlinux DOT us>
# Inspired by some code originally  written by Colin Verot

sanity() {
	# check the configuration
	if [[ -z "${WHATTOSYNC[0]}" ]]; then
		echo "Must define at least one directory in $CONF" >&2
		return 2
	fi

	if [[ ! -d "$TMPFS" ]]; then
		echo "I cannot read $TMPFS which is defined in $CONF" >&2
		return 3
	fi
}

sync() {
	# sync hdd to tmpfs and back again
	local i STATIC LINK
	for i in "${WHATTOSYNC[@]}"; do
		STATIC="$i-backup"	# this is the hdd bound backup in case of power failure
		LINK="$i"	# this is the name of the symlink

		if [[ -d $LINK ]]; then
			[[ -d "$VOLATILE$i" ]] || mkdir -p "$VOLATILE$i" || install -Dm755 "$VOLATILE$i"

			# backup targets and link to tmpfs
			if [[ "$(readlink "$LINK")" != "$VOLATILE$i" ]]; then
				mv "$LINK" "$STATIC"
				ln -s "$VOLATILE$i" "$LINK"
			fi

			# sync the RAM targets to the disc
			if [[ -e "$LINK/.flagged" ]]; then
				rsync -a --delete --exclude .flagged "$LINK/" "$STATIC/"
			else
				rsync -a "$STATIC/" "$LINK/"
				> "$LINK/.flagged"
			fi
		fi
	done
}

check() {
	# crash recovery
	local i STATIC LINK
	for i in "${WHATTOSYNC[@]}"; do
		STATIC="$i-backup"  # this is the hdd bound backup in case of power failure
		LINK="$i" # this is the name of the symlink
		if [[ ! -e "$VOLATILE$i/.flagged" ]]; then
			[[ -h "$LINK" ]] && rm -f "$LINK"
			[[ -d "$STATIC" ]] && mv "$STATIC" "$LINK"
		fi
	done
}

unsync() {
	# restore virgin state on physical discsa
	local i STATIC LINK
	for i in "${WHATTOSYNC[@]}"; do
		STATIC="$i-backup"  # this is the hdd bound backup in case of power failure
		LINK="$i" # this is the name of the symlink

		# check if target is there
		if [[ -h "$LINK" ]]; then
			rm -f "$LINK"
			[[ -d "$STATIC" ]] && mv "$STATIC" "$LINK"
			[[ -d "$VOLATILE$i" ]] && rm -rf "$VOLATILE$i"
		fi
	done
}

# parse options
CONF="/etc/asd.conf"
OPTIND=1
OPTARG=""
opt=""
while getopts 'c:' opt; do
  case "$opt" in
    c)  CONF="${OPTARG}";;
  esac
done
shift "$((${OPTIND} - 1))"

[[ ! -f "$CONF" ]] && {
	echo "$CONF does not exist!" >&2
	exit 1
}

source "$CONF"

declare -r VOLATILE="$TMPFS/asd"


case "$1" in
	sanity)
		sanity;;
	check)
		sanity || exit $?
		# do not run if the daemon is running
		[[ ! -f /run/daemons/asd ]] && check
		;;
	sync)
		sanity || exit $?
		sync
		;;
	unsync)
		sanity || exit $?
		# make sure the daemon is running
		[[ -f /run/daemons/asd ]] && unsync
		;;
	*)
		# keep user from messing with this directly
		echo "You should not call this script directly, let the /etc/rc.d/asd do it for you!" >&2 && exit 0
esac
